<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E2E2E2"
    android:padding="16dp">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Back Button and Checkout Title -->
            <LinearLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/backButtonC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&lt; Back"
                    android:textSize="16sp"
                    android:textColor="#6B6B6B"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/checkoutTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Checkout"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Delivery Address -->
            <TextView
                android:id="@+id/deliveryAddressLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Delivery Address"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/deliveryAddressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="karve putla, Kothrud, pune, Maharastra - 411038"
                android:textColor="#000"
                android:layout_marginTop="8dp"
                android:textSize="14sp"/>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#777777"
                android:layout_marginVertical="16dp" />

            <!-- Item Section -->
            <LinearLayout
                android:id="@+id/itemSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/itemLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item"
                    android:textStyle="bold"
                    android:textColor="#000"/>

                <!-- Item Details -->
                <LinearLayout
                    android:id="@+id/itemDetailsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <!-- Item Image -->
                    <ImageView
                        android:id="@+id/itemImage"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:src="@drawable/lawak_kampus_39" />

                    <LinearLayout
                        android:id="@+id/itemDescriptionLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="16dp"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:id="@+id/itemTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lawak Kampus 39"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/itemAuthor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Keith"
                            android:textColor="#6B6B6B"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:id="@+id/itemPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rs100.00"
                            android:textColor="#FF0000"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#777777"
                android:layout_marginVertical="16dp" />

            <!-- Order Total -->
            <LinearLayout
                android:id="@+id/orderTotalLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/orderTotalLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Order Total (1 Item):"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/orderTotalAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs100.00"
                    android:textColor="#FF0000"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#777777"
                android:layout_marginVertical="16dp" />

            <!-- Payment Option -->
            <TextView
                android:id="@+id/paymentOptionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Option:"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginTop="16dp"/>

            <LinearLayout
                android:id="@+id/paymentOptionsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/visaLogo"
                    android:layout_width="34dp"
                    android:layout_height="40dp"
                    android:src="@drawable/visa" />

                <ImageView
                    android:id="@+id/masterCardLogo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/mastercard"
                    android:layout_marginStart="16dp"/>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#777777"
                android:layout_marginVertical="16dp" />

            <!-- Price Breakdown -->
            <!-- Item Subtotal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/itemSubtotalLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Item Subtotal:"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/itemSubtotalAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs100.00"
                    android:textColor="#FF0000"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- Shipping Subtotal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/shippingSubtotalLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Shipping Subtotal:"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/shippingSubtotalAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs4.00"
                    android:textColor="#FF0000"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- Total Payment -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/totalPaymentLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Total Payment:"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/totalPaymentAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs104.00"
                    android:textColor="#FF0000"
                    android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Fixed Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="16dp">

        <!-- Subtotal Section -->
        <LinearLayout
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Subtotal Text -->
            <TextView
                android:id="@+id/subtotalAmount"
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:paddingLeft="130dp"
                android:text="Total Payment:"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16sp" />

            <!-- Subtotal Amount -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs104.00"
                android:paddingLeft="160dp"
                android:textColor="#FF0000"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Checkout Button -->
        <Button
            android:id="@+id/checkoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy"
            android:textColor="#FFFFFF"
            android:background="#D32F2F"
            android:padding="16dp"
            android:textSize="16sp"
            android:layout_marginStart="16dp" />
    </LinearLayout>
</LinearLayout>