<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Main content layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#E2E2E2">

        <!-- Toolbar with Menu and Cart Icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/menuSideBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shoppingcart2"
                android:contentDescription="Menu"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="12dp"
                android:minWidth="48dp"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:text="Categories"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/cartSC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shop_cart"
                android:contentDescription="Cart"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="12dp"
                android:minWidth="48dp"
                android:minHeight="48dp" />
        </LinearLayout>

        <!-- Scrollable Category Sections -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Fantasy Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fantasy"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Books in Fantasy Section -->
                        <ImageView
                            android:id="@+id/CategoriesHarryRed"
                            android:layout_width="120dp"
                            android:layout_height="180dp"
                            android:src="@drawable/book_harrypotter1"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="Book 1" />

                        <ImageView
                            android:id="@+id/CategoriesHarryGreen"
                            android:layout_width="120dp"
                            android:layout_height="180dp"
                            android:src="@drawable/book_harrypotter2"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="Book 2" />

                        <ImageView
                            android:id="@+id/CategoriesHarryPurple"
                            android:layout_width="120dp"
                            android:layout_height="180dp"
                            android:src="@drawable/book_harrypotter3"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="Book 3"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY" />

                    </LinearLayout>
                </HorizontalScrollView>

                <!-- Comic Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comic"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Books in Comic Section -->
                        <ImageView
                            android:id="@+id/CategoriesLawakKampus39"
                            android:layout_width="120dp"
                            android:layout_height="180dp"
                            android:src="@drawable/lawak_kampus_39"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="Comic Book 1" />

                        <ImageView
                            android:id="@+id/CategoriesLawakKampus40"
                            android:layout_width="120dp"
                            android:layout_height="180dp"
                            android:src="@drawable/lawak_kampus_40"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="Comic Book 2" />

                        <ImageView
                            android:id="@+id/CategoriesLawakKampus392"
                            android:layout_width="120dp"
                            android:layout_height="180dp"
                            android:src="@drawable/lawak_kampus_39"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="Comic Book 3" />

                    </LinearLayout>
                </HorizontalScrollView>

                <!-- Science Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Science"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Books in Science Section -->
                        <ImageView
                            android:id="@+id/CategoriesWBBA"
                            android:layout_width="120dp"
                            android:layout_height="180dp"
                            android:src="@drawable/whenbreathbecomes"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="Science Book 1" />

                        <ImageView
                            android:id="@+id/CategoriesSappiens1"
                            android:layout_width="120dp"
                            android:layout_height="180dp"
                            android:src="@drawable/sappiens1"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="Science Book 2" />

                        <ImageView
                            android:id="@+id/CategoriesSappiens2"
                            android:layout_width="120dp"
                            android:layout_height="180dp"
                            android:src="@drawable/sappiens2"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="Science Book 3" />

                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>
        </ScrollView>

        <!-- Bottom Navigation Bar -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="8dp">

            <!-- Background CardView for rounded corners and elevation -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <!-- Navigation buttons in a horizontal layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/homeButtonC"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_home"
                        android:contentDescription="Home"
                        android:minWidth="48dp"
                        android:minHeight="48dp" />

                    <ImageButton
                        android:id="@+id/bookmarkButtonC"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_bookmark"
                        android:contentDescription="Categories"
                        android:minWidth="48dp"
                        android:minHeight="48dp" />

                    <ImageButton
                        android:id="@+id/menuButtonC"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_menu"
                        android:contentDescription="Notifications"
                        android:minWidth="48dp"
                        android:minHeight="48dp" />

                    <ImageButton
                        android:id="@+id/settingsButtonC"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_settings"
                        android:contentDescription="Settings"
                        android:minWidth="48dp"
                        android:minHeight="48dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <!-- Sidebar / Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFFFFF"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
